;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
;; параметры с поддержкой auto_section (автоматическое создание указанных в нём секций)
;; в значениях указываются исключения, на которые auto_section не распространяется
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
[auto_sections]
on_info     =
on_death    = 
on_timer    = 
on_use      = 
on_hit      = 
on_combat   = 
danger      = 
wounded     = 
meet        = no_meet
active      = 

;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
;; bases sections (abstracts)
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
[base_over]
override = true

[overrides]
on_info                = string    ;если ... то ...
on_trader              = string  ;file_name
on_timer               = string  ;number|если ... то ...
info               	   = string
actor_dialogs          = string
on_death           = + {death}
on_use             = + {use}
on_hit             = + {hit}
danger             = + {danger}
on_combat          = + {combat}
wounded            = + {wounded}
meet               = + {meet, no_meet}
heli_hunter        = + {heli_hunter}
combat_ignore      = + {combat_ignore}
combat_ignore_cond     = string ;условие игнорирования

[base_path]
path_walk = string ;all.spawn>>way
path_look = string ;all.spawn>>way

[base_def_state_stand]
def_state_standing = "state_lib.states"

[base_def_state_move]
def_state_moving   = "state_lib.states"

[base_def_state_move_123]
def_state_moving1 = "state_lib.states"
def_state_moving2 = "state_lib.states"
def_state_moving3 = "state_lib.states"

