anim_run                = "state_lib.states"
anim_sprint             = "state_lib.states"
formation_line              = bool
distance                    = number
snd                     = "sound_theme.theme"
state_if_leader_in_meet = "state_lib.states"
stub_for_corpse             = bool
dont_change_job             = bool

[camper]:base_path, base_def_state_stand, base_def_state_move, overrides
