;; uses schemes (юзаемые схемы)
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
[logic]:overrides
active = "stypes" - {wounded, danger, heli_hunter, hit, combat, use, death, meet}
cfg = string

[walker]:base_path, base_def_state_stand, base_def_state_move_123, overrides
