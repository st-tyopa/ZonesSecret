radius                      = number

[patrol]:base_path, base_def_state_stand, base_def_state_move_123, overrides
formation               = + {line, back, around}
move_type               = "state_lib.states"
animation               = "state_lib.states"
commander                   = bool

[remark]:overrides
snd_anim_sync               = bool
snd                     = "sound_theme.theme"
anim                    = "state_lib.states"
tips                    = "news_manager.news"
tips_sender             = "news_manager.tips_icons"
anim_reset                  = bool
target                  = game_story_ids.ltx | story_ids + {actor, nil}

[rest]:overrides
path_rest                   = string

[sleeper]:overrides
path_main                   = string
wakeable                    = bool

[test]:base_path, overrides
team = string

