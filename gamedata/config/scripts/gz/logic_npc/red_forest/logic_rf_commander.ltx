[logic]
active = walker
on_death = death@rf_military

[walker]
path_walk = redfor_military_leader_walk
path_look = redfor_military_leader_look
meet = meet@redfor_military_leader
def_state_standing = guard
on_info = {+rf_cave_documents_start} remark@call_redfor_military_leader

[meet@redfor_military_leader]
use = true

[remark@call_redfor_military_leader]
anim = guard
snd = esc_factory_raid
target = actor
on_signal = sound_end| walker@redfor_military_to_cave_commander %+rf_military_group_to_cave%
meet = no_meet

[walker@redfor_military_to_cave_commander]
path_walk = redfor_military_to_cave_walk2
def_state_moving1 = assault
def_state_moving2 = assault
def_state_moving3 = assault
meet = no_meet
on_signal = rfmilonpesch | walker@redfor_military_in_cave_commander %+redfor_military_group_in_cave_1%

[walker@redfor_military_in_cave_commander]
path_walk = redfor_military_incave_com_walk
path_look = redfor_military_incave_com_look
def_state_standing = hide
meet = meet@redfor_military_leader
on_info = {+rf_predat_scene_remark_start} %=disable_ui% remark@incave_commander 

[remark@incave_commander]
anim = punch
target = actor
;on_signal = anim_end| %=run_cam_effector(fusker:999:false)% remark@incave_commander2
;on_signal = anim_end| %=actor_punch% remark@incave_commander2
on_timer = 1500| %=run_cam_effector(fusker:999:false) =play_snd(actor\pain_4)% remark@incave_commander1_1

[remark@incave_commander1_1]
anim = threat
target = actor
on_timer = 1000| %=play_snd(monsters\bloodsucker\bloodsucker_script_attack_0)% remark@incave_commander2

[remark@incave_commander2_1]
anim = threat
target = actor
on_timer = 1000| %=run_postprocess(deadcity_wake)% remark@incave_commander2_3

[remark@incave_commander2_3]
anim = threat
target = actor
on_timer = 1000| walker@redfor_military_to_cave_commander %=stop_cam_effector(1001)% remark@incave_commander2

[remark@incave_commander2]
anim = threat
target = actor
on_timer = 3000| walker@redfor_military_to_cave_commander %=teleport_actor(rf_teleport_stay:rf_teleport_look) =enable_ui +predatelstvo +rf_predat_scene_end%

[death@rf_military]
on_info = %+predatel_commander_dead%