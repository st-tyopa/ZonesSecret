[logic]
active = mob_walker
on_death = mob_death

[mob_walker]
path_walk = redfor_gigant_stay_walk
;on_info = {+rf_gigant_attack} mob_walker@attack
on_info = {+rf_gigant_attack} mob_home

[mob_walker@attack]
path_walk = redfor_gigants_attack_walk
on_info = {+rf_gigant_to_home} mob_home
panic = 0

[mob_home]
path_home = redfor_gigant_home
home_min_radius = 50
home_max_radius = 75
aggressive_home

[mob_death]
on_info = %+rf_hunters_kill_gigant_done%