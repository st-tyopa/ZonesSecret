on_hit = hit
on_death = death

[walker]
path_walk = yan_ocelot_guard1_walk
on_info = {+ocelot_rob_start} walker2, {+yan_rob_ocelot_shot} %+yan_rob_rano =killactor =set_enemies(65004:65005)%, {+yan_rob_ocelot_dead} %=killactor =set_enemies(65004:65005)%, {+ocelot_group_enemy} %=killactor =set_enemies(65004:65005)%

