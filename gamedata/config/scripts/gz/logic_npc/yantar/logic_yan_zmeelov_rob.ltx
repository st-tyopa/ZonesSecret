[logic]
active = walker
on_death = death

[walker]
path_walk = yan_zmeelov_tel_look
path_look = yan_zmeelov_tel
meet = meet@self_doc
on_info = {+yan_zmeelov_dialog_rob_done} walker@wait

[walker@wait]
path_walk = yan_zmeelov_rob_sit
path_look = yan_zmeelov_rob_look
def_state_standing = hide
on_info = {+ocelot_rob_start} %=play_snd_from_obj(65011:characters_voice\soz\gz_yantar\zmeelov_gop_stop)% walker@rob, {+yan_rob_ocelot_dead} %=killactor =set_enemies(65002:65003)%, {+yan_rob_rano} %=set_enemies(65002:65003)%, {+yan_rob_ocelot_guard_shot} %=set_enemies(65002:65003)%

[walker@rob]
path_walk = yan_zmeelov_rob_walk
on_signal = robpos |  %+yan_zmeelov_rob_on_pos% 
on_info = {+yan_rob_ocelot_dead} %=killactor =set_enemies(65002:65003)%, {+ocelot_group_enemy} %=killactor =set_enemies(65002:65003)%
on_info2 = {+yan_rob_hands_up2} %=play_snd_from_obj(65011:characters_voice\soz\gz_yantar\zmeelov_repeat)%

[walker@rob2]
path_walk = yan_zmeelov_rob_walk
path_look = yan_ocelot_sit_look
def_state_standing = warding 
on_info = {+yan_rob_ocelot_dead} %=killactor =set_enemies(65002:65003)%, {+ocelot_group_enemy} %=killactor =set_enemies(65002:65003)%
on_info2 = {+yan_rob_hands_up2} %=play_snd_from_obj(65011:characters_voice\soz\gz_yantar\zmeelov_repeat)%

[meet@self_doc] 
use = {=dist_to_actor_le(3)} self

[death]
on_info = %+yan_zmeelov_rob_dead%