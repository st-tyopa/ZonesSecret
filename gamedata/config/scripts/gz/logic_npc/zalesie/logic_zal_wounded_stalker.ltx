[logic@zal_prison]
active = camper@zal_prison
combat_ignore = combat_ignore

[camper@zal_prison]
path_walk = prisoner_walk
path_look = prisoner_look
combat_ignore_cond = always
def_state_campering = prisoner
on_info = {=kill_merc_complete} remark@esc_prison_help

[remark@esc_prison_help]
snd = esc_shustryi_help
anim = prisoner
meet = no_meet
target = prison_look, 0
on_actor_dist_le = 5| remark@zal_wounded_prisoner
combat_ignore_cond = always
danger = danger_condition@shustryi
on_signal = sound_end| remark@zal_wounded_wait
on_info = {+back_to_scien_lager_start} walker@zal_prisoner_walk

[remark@zal_wounded_wait]
anim = prisoner
meet = no_meet
target = zal_prison_prisoner_look, 0
on_actor_dist_le = 5| remark@zal_wounded_prisoner
combat_ignore_cond = always
danger = danger_condition@shustryi
on_timer = 10000| remark@esc_prison_help
on_info = {+back_to_scien_lager_start} walker@zal_prisoner_walk


[remark@zal_wounded_prisoner]
anim = wait
anim_reset = false
target = prison_look, 0
snd = esc_shustryi_thanks
on_info = {+back_to_scien_lager_start} walker@zal_prisoner_walk
on_signal = sound_end| remark@wait_player_at_lager
combat_ignore_cond = always
meet = meet@no_meet
danger = danger_condition@shustryi

[remark@wait_player_at_lager]
anim = wait
anim_reset = false
target = actor
meet = meet@friend
danger = danger_condition@shustryi
on_info = {+back_to_scien_lager_start} walker@zal_prisoner_walk

[walker@zal_prisoner_walk]
path_walk = prisoner_walk
path_look = prisoner_look

[danger_condition@shustryi]
ignore_distance = 0