[logic]
active = ph_door@close

[ph_door@locked]
locked = true
closed = true
snd_open_start = trader_door_open_start
snd_close_start = trader_door_close_start
snd_close_stop = trader_door_close_stop
on_info = {+yan_blokp_gate_open} ph_door@close

[ph_door@close]
locked = false
closed = true
snd_open_start = trader_door_open_start
snd_close_start = trader_door_close_start
snd_close_stop = trader_door_close_stop
on_use = {+find_lab_flash_done} %+lab_end_door_open_sms% ph_door@close_1

[ph_door@open]
locked = false
closed = false
snd_open_start = trader_door_open_start
snd_close_start = trader_door_close_start
snd_close_stop = trader_door_close_stop
on_use = %=play_snd(device\door_servomotor)% ph_door@close

[ph_door@close_1]
locked = false
closed = true
snd_open_start = trader_door_open_start
snd_close_start = trader_door_close_start
snd_close_stop = trader_door_close_stop
on_game_timer = 80|%+lab_end_door_open =play_snd(device\door_servomotor)% ph_door@open 
