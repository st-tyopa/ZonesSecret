[wpn_addon_scope_susat]:identity_immunities
GroupControlSection	= spawn_group
discovery_dependency = 
$spawn			= "weapons\addons\scope_susat" ; option for Level Editor
class			= WP_SCOPE
cform           = skeleton
visual          = weapons\upgrades\wpn_addon_scope_acog.ogf
description		= "Оптический прицел ACOG TA01 NSN. Этот оптический прицел с четырехкратным увеличением был включен в комплект модульных систем и приспособлений для стрелкового оружия SOPMOD3, который разрабатывался с 1994 года в центре наземных операций ВМС США. В комплекте SOPMOD Block 1, внедрявшемся в войска для оснащения карабинов М4А1 в период с 1995 по 2005 год, прицел ACOG ТА01 NSN обозначается как 4 х Day Optical Scope (четырехкратный дневной оптический прицел). В настоящее время модель ТА01 NSN используется уже не только спецподразделениями в комплекте SOPMOD, но и получила довольно широкое распространение в обычных частях и подразделениях американских войск."

;$prefetch 		= 64

cost			= 500

holder_range_modifier	= 1.3
holder_fov_modifier		= 0.3

inv_name		= "ACOG TA01 NSN"
inv_name_short	= "ACOG TA01 NSN"
inv_weight		= .2

inv_grid_width		= 1
inv_grid_height		= 1
inv_grid_x			= 19
inv_grid_y			= 1
scope_texture		= wpn\wpn_crosshair_acog
scope_zoom_factor	= 30		;SUSAT 2X

