function skip_time(actor, npc, p)
 local hour = p[1] or 0
 local min = p[2] or 0
 local sec = p[3] or 0
 local time = game.time() / 1000 + 3600 * hour + 60 * min + sec
 local t_sec = time % 60
 local t_min = (time - t_sec) / 60 % 60
 local t_hour = ((time - time % 3600) / 3600) % 24
 gz_prologue.set_current_time1(t_hour, t_min, t_sec)
end



