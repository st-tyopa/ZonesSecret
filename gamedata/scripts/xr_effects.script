function broke_objects_in_box(actor, box, section, hit)
	--// перебор объектов
	for id=1,65534 do
		local obj = level.object_by_id(id)
		if obj~= nil then
			--//находим предметы из ящика
			if obj:section() == section and obj:parent() == box:id() then
				--//ломаем их
				local condition = obj.condition()
				condition = condition - hit
				if condition < 0 then
					condition = 0
				end
				obj:set_condition(condition)
			end
		end
	end
end
