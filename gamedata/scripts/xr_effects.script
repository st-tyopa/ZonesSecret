function start_time_scale()
	local time = {22, 0}
	local cur_hour = level.get_time_hours()
	local cur_min = level.get_time_minutes()
	if time[2] < cur_min then
		time[2] = time[2] + 60
		time[1] = time[1] - 1
	end
	if time[1] < cur_hour then
		time[1] = time[1] + 24
	end
	local min = time[2] - cur_min
	local hour = time[1] - cur_hour
	local ms = (hour * 60 + min) * 12
	level.set_time_factor(ms)
	game.start_tutorial("time_scale")
end


